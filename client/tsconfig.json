{
  // NG2CompilerOptions: auto-generate ngfactories
  // https://github.com/angular/angular/blob/master/tools/%40angular/tsc-wrapped/src/options.ts
  "angularCompilerOptions": {
    "genDir": "gen/ngfactory",
    "skipMetadataEmit": true,
    "trace": true,
    "debug": true
  },

  //Useful ts compiler options, even though its for react.
  //http://blog.tomduncalf.com/posts/setting-up-typescript-and-react/
  "compilerOptions": {    
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    //"baseUrl": "ngsrc",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "gen/es5",

    "strictNullChecks": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [ "es5", "es2015", "dom" ],
    "types": [ "node" ]
  },

  "include": [
    "ngsrc/**/*.ts"
  ],

  "exclude": [
    "ngsrc/**/*.spec.ts"
  ],

  "compileOnSave": false,
  "buildOnSave": false
}
